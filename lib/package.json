{
    "name": "markmuse-wechat",
    "version": "1.0.1",
    "description": "Convert Markdown to WeChat Official Account HTML format (requires browser environment)",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./converter": {
            "import": "./dist/converter.js",
            "types": "./dist/converter.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "keywords": [
        "markdown",
        "wechat",
        "wechat-official-account",
        "html",
        "converter",
        "headless"
    ],
    "author": "shalom-lab",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shalom-lab/markmuse.git"
    },
    "peerDependencies": {
        "mathjax": "^3.0.0"
    },
    "dependencies": {
        "juice": "^11.0.3",
        "markdown-it": "^14.1.0",
        "highlight.js": "^11.11.1",
        "katex": "^0.16.27",
        "playwright": "^1.40.0"
    },
    "devDependencies": {
        "typescript": "^5.2.2",
        "vite": "^5.1.0",
        "@types/node": "^20.0.0"
    },
    "scripts": {
        "build": "vite build && vite build --config vite.bundle.config.ts && tsc -p tsconfig.converter.json",
        "build:lib": "vite build",
        "build:bundle": "vite build --config vite.bundle.config.ts",
        "build:converter": "tsc -p tsconfig.converter.json",
        "type-check": "tsc --noEmit",
        "preview": "vite preview",
        "test:node": "node test-local.js",
        "test:browser": "echo '请在浏览器中打开 test-browser.html 文件进行测试'"
    }
}
